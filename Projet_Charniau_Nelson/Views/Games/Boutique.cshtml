@model IEnumerable<Projet_Charniau_Nelson.Models.Game>
@{
    ViewBag.Title = "Boutique";
}

<h2>Boutique</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.price)
    </td>
    @if (Session["ID"] != null)
    {
        <td>
            @Html.ActionLink("Ajouter", "Ajouter", new { id = item.ID })
        </td>
    }
    else
    {<td>
    @Html.ActionLink("Ajouter", "Index", "Login")
</td>
    }
</tr>
    }

</table>
