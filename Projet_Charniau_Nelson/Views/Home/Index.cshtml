@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>GameCorp</h1>
   
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Welcome to GameCorp</h2>
        <p>
            GameCorp is a Game Corporation
            @if (@Session["Nom"] != null)
            {
            <p>Bonjour @Session["Nom"] @Session["Prenom"]</p>
            if ((bool)@Session["Admin"])
            {
                <p> Session Admin</p>
            }
        }



        </div>
    @if(@Session["Nom"] == null)
    {
        <div class="col-md-4">
            <h2>Inscrivez-vous ! </h2>
            <p>C'est içi que vous pouvez vous inscrire</p>
            <p><a class="btn btn-default" href="https://localhost:44311/Users/Create">M'inscrire &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Connectez-vous ! </h2>
            <p>C'est içi que vous pouvez vous connectez</p>
            <p><a class="btn btn-default" href="https://localhost:44311/Login/Index">Me connecter &raquo;</a></p>
        </div>
    }
        </div>