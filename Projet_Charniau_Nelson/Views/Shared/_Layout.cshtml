<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GameCorp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GameCorp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    @if (@Session["Nom"] != null && (bool)@Session["Admin"])
                    {
                        <li>@Html.ActionLink("Client", "Index", "Users")</li>
                        <li>@Html.ActionLink("Jeux", "Index", "Games")</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                        <li>@Html.ActionLink("Boutique", "Boutique", "Games")</li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (@Session["Nom"] == null)
                    {
                        <li>@Html.ActionLink("Inscription", "Create", "Users")</li>
                        <li>@Html.ActionLink("Se connecter", "Index", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Se déconnecter", "Deco", "Login")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GameCorp</p>
        </footer>
    </div>
    <script src="~/FrontEnd/vendor/jquery/jquery.min.js"></script>
    <script src="~/FrontEnd/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/FrontEnd/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/FrontEnd/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/FrontEnd/vendor/chart.js/Chart.min.js"></script>
    <script src="~/FrontEnd/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/FrontEnd/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/FrontEnd/js/charts-home.js"></script>
    <script src="~/FrontEnd/monjs/Login.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
