@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h2>Mes commandes</h2>



@foreach (var item in Model)
{
    <div class="border border-dark">

        <p> Commande : @Html.DisplayFor(modelItem => item.ID)</p>
        <p>Effectuée le : @Html.DisplayFor(modelItem => item.DateCom)</p>

        @foreach (var item2 in item.Detail)
        {
            <p> - @Html.DisplayFor(modelItem => item2.Game.Name) @Html.DisplayFor(modelItem => item2.Game.price)€</p>
        }

    </div>
}

